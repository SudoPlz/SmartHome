<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windows_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/common_toolbar"
        layout="@layout/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_10"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/rl_house_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_house_name"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_5"
                android:ellipsize="end"
                android:text="房屋"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_18" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_room_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="房间"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/tv_room_no"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_circle_light_redlight_red"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_16" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_order_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_5"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/begin_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="入住时间"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_begin_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:ellipsize="end"
                    android:text="￥388"
                    android:textColor="@color/main_toolbar_color"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:ellipsize="end"
                    android:text="结束时间"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:ellipsize="end"
                    android:text="￥988"
                    android:textColor="@color/main_toolbar_color"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/rl_house_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_house_name"
            android:gravity="center"
            android:layout_margin="@dimen/space_1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/house_address"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/space_5"
                android:src="@drawable/icon_loc_gray" />

            <TextView
                android:id="@+id/tv_house_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_5"
                android:ellipsize="end"
                android:singleLine="false"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_14"
                android:text="" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/rl_order_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="订单号:"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_order_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/main_toolbar_color"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="需支付:"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_order_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/orange"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_margin="@dimen/space_5"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="@null"
                android:scrollbars="vertical" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pay_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/space_10"
        android:background="@color/windows_bg"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_40"
            android:layout_marginBottom="@dimen/space_20"
            android:layout_marginTop="@dimen/space_20"
            android:background="@color/main_toolbar_color"
            android:gravity="center"
            android:paddingLeft="@dimen/space_30"
            android:paddingRight="@dimen/space_30"
            android:text="@string/cancle"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/btn_do_pay"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_40"
            android:layout_marginBottom="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginTop="@dimen/space_20"
            android:background="@color/main_toolbar_color"
            android:gravity="center"
            android:paddingLeft="@dimen/space_30"
            android:paddingRight="@dimen/space_30"
            android:text="@string/do_pay"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />

    </LinearLayout>
</LinearLayout>