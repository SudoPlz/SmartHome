<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_add_lock_list_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="@dimen/space_0"
        android:layout_marginRight="@dimen/space_0"
        android:layout_marginTop="2dp"
        android:foreground="?attr/selectableItemBackground"
        android:stateListAnimator="@anim/touch_raise">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_lock"
                    android:layout_width="@dimen/space_40"
                    android:layout_height="@dimen/space_40"
                    android:layout_margin="@dimen/space_10"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_my_lock" />

                <TextView
                    android:id="@+id/tv_house_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="ID:128739826923"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_size_14" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_5"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/room_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="房间"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/tv_room_no"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_circle_light_redlight_red"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14"
                    android:text="1" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/space_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/lock_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:checked="false"
                    android:gravity="center" />

                <CheckBox
                    android:id="@+id/ckeckbox_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:checked="false"
                    android:button="@drawable/checkbox_selecter_item"
                    />
            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>