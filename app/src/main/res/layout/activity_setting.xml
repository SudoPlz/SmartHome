<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:orientation="vertical"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/common_toolbar"
            layout="@layout/common_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <View
            style="@style/h_line"
            android:layout_marginTop="20dip" />

        <RelativeLayout
            android:id="@+id/rl_loading_img"
            style="@style/option_item_rl">

            <TextView
                style="@style/option_item_text_parent"
                android:text="开机启动"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_16" />

            <com.nick.smarthome.widgets.togglebutton.ToggleButton
                android:id="@+id/tb_power_on"
                style="@style/option_item_toggleButton"
                android:textOn="ON"
                android:textOff="OFF"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <View style="@style/h_line" />

        <RelativeLayout
            android:id="@+id/rl_notification_settings"
            style="@style/option_item_rl">

            <TextView
                style="@style/option_item_text_parent"
                android:text="消息通知"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_16" />

            <com.nick.smarthome.widgets.togglebutton.ToggleButton
                android:id="@+id/tb_notification"
                style="@style/option_item_toggleButton"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <View style="@style/h_line" />

        <RelativeLayout
            android:id="@+id/rl_clean_cache"
            style="@style/option_item_rl">

            <TextView
                style="@style/option_item_text_parent"
                android:text="清除缓存"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_cache_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_14"
                tools:text="" />
        </RelativeLayout>


        <View style="@style/h_line" />

        <RelativeLayout
            android:id="@+id/rl_check_update"
            style="@style/option_item_rl">

            <TextView
                style="@style/option_item_text_parent"
                android:text="检查更新"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>

        <View style="@style/h_line" />

        <RelativeLayout
            android:id="@+id/rl_share"
            style="@style/option_item_rl">

            <TextView
                style="@style/option_item_text_parent"
                android:text="分享给好友"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>

        <View style="@style/h_line" />


        <View
            style="@style/h_line"
            android:layout_marginTop="20dip" />

        <RelativeLayout
            android:id="@+id/rl_about"
            style="@style/option_item_rl">

            <TextView
                style="@style/option_item_text_parent"
                android:text="关于手源"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>

        <View style="@style/h_line" />

        <RelativeLayout
            android:id="@+id/rl_exit"
            style="@style/option_item_rl">

            <TextView
                android:id="@+id/setting_logout"
                style="@style/option_item_text_parent"
                android:text="退出"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>

        <View style="@style/h_line" />
    </LinearLayout>

</ScrollView>